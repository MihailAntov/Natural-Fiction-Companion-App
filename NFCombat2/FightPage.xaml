<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCombat2.FightPage"
             Title="FightPage">


    <ScrollView>
        <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

            <Label
            Text="Natural Fiction"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

            <Label
            Text="Companion App"
            x:Name="TestLabel"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description=""
            FontSize="18"
            HorizontalOptions="Center" />



            <Button
            x:Name="GetEpisodeBtn"
            Text="Enter Episode!"
            SemanticProperties.Hint="Loads an episode"
            Clicked="GetEpisode" 
            HorizontalOptions="Center" />

            <Button
            x:Name="IncreaseHpBtn"
            Text="Increase HP"
            Clicked="IncreaseHealth"
            HorizontalOptions="Center" />

            <Button
            x:Name="ShowHpBtn"
            Text="Show HP"
            Clicked="ShowHealth"
            HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>