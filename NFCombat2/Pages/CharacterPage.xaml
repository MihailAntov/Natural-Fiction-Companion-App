<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Name="Character"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCombat2.Pages.CharacterPage"
             Title="Character">
    <VerticalStackLayout>

        <Picker x:Name="Profile"
        Title="Choose a profile"
        SelectedItem="{Binding SelectedItem}"
        SelectedIndexChanged="ChangedProfile"
        ItemsSource="{Binding Profiles}"
        ItemDisplayBinding="{Binding Name}">
        </Picker>
        <Button Text="Add new profile" Command="{Binding AddNewProfileCommand}"/>

        <!--<Label Text="{Binding Source={x:Reference Character}, Path=BindingContext.Player.Name}"/>-->
        <Label Text="{Binding Player.Name}"/>

        <StackLayout BindableLayout.ItemsSource="{Binding Player}">
            <Image Source=""/>
            <Label Text="{Binding Health}"/>
            <Slider  Minimum="0" Maximum="30" Value="{Binding Health}"/>
            <Stepper Minimum="0" Maximum="99"/>
        </StackLayout>

        <StackLayout>
            <Label Text="{Binding TraumaValue}"/>
            <Slider  Minimum="0" Maximum="30" Value="{Binding TraumaValue}"/>
            <Stepper Minimum="0" Maximum="30"/>
        </StackLayout>

        <StackLayout>
            <Label Text="{Binding PathogenValue}"/>
            <Slider  Minimum="0" Maximum="30" Value="{Binding PathogenValue}"/>
            <Stepper Minimum="0" Maximum="30"/>
        </StackLayout>


    </VerticalStackLayout>

</ContentPage>