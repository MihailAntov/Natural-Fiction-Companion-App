<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:NFCombat2.Views"
             xmlns:helpers="clr-namespace:NFCombat2.Helpers"
             x:Class="NFCombat2.Pages.FightPage"
             Title="Fight Simulator">


    <ScrollView>
        
       
        
        <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="StartAndExpand">

            <Button IsVisible="{Binding NotInCombat, Converter={helpers:InverseBoolConverter}}"
                    Text="X"
                    HorizontalOptions="End"
                    Command="{Binding ExitCombatCommand}"
                    />


            

            <ListView ItemsSource="{Binding Enemies}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell 
                            Text="{Binding Name}"
                            Detail="{Binding Health}"
                        />
                    </DataTemplate>
                </ListView.ItemTemplate>    
            </ListView>

            <Border IsVisible="{Binding NotInCombat, Converter={helpers:InverseBoolConverter}}">
                <ListView 
                    ItemsSource="{Binding Messages}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
            
            <Label
            Text="{Binding TestLabel}"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description=""
            FontSize="18"
            HorizontalOptions="Center" />

            <views:OptionPickerView BindingContext="{Binding OptionPickerViewModel}"/>

            <Entry
            IsVisible="{Binding NotInCombat}"
            Keyboard="Numeric"
            Text="{Binding EpisodeNumber}"
            SemanticProperties.Hint="Loads an episode"
            Placeholder="Enter episode number"
            HorizontalOptions="Center" />


            <Button 
                Text="Find"
                IsVisible="{Binding NotInCombat}"
                Command="{Binding GetEpisodeCommand}"
                />
            

            
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>