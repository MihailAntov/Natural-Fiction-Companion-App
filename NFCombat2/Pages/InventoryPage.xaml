<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCombat2.Pages.InventoryPage"
             xmlns:views="clr-namespace:NFCombat2.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="{Binding Title}">
    <VerticalStackLayout>

        
        <!--<Button Text="Add Weapon" Command="{Binding AddToPlayerCommand}" CommandParameter="weapon"/>-->
        <Grid HeightRequest="160">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border BackgroundColor="Black" Grid.Column="2">
                <ImageButton Opacity="{Binding MainHandTransparency}" Source="{Binding MainHandImage}" Command="{Binding AddWeaponToPlayerCommand}" CommandParameter="main">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="Gold" />
                    </ImageButton.Behaviors>
                </ImageButton>
            </Border>
            <Border BackgroundColor="Black" Grid.Column="4">
                <ImageButton Opacity="{Binding OffHandTransparency}" Source="{Binding OffHandImage}" Command="{Binding AddWeaponToPlayerCommand}" CommandParameter="off">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="Gold" />
                    </ImageButton.Behaviors>
                </ImageButton>
            </Border>
        </Grid>
        <Button Text="Add Equipment" Command="{Binding AddToPlayerCommand}" CommandParameter="equipment"/>
        <Button Text="Add Item" Command="{Binding AddToPlayerCommand}" CommandParameter="item"/>

        <ListView ItemsSource="{Binding Weapons}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell>
                        <TextCell.Text>

                            <MultiBinding StringFormat="{}{0}  ({1})">
                                <Binding Path="Name"/>
                                <Binding Path="Quantity"/>
                            </MultiBinding>
                        </TextCell.Text>
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView ItemsSource="{Binding Equipment}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell>
                    <TextCell.Text>
                        
                        <MultiBinding StringFormat="{}{0}  ({1})">
                            <Binding Path="Name"/>
                            <Binding Path="Quantity"/>
                        </MultiBinding>
                    </TextCell.Text>
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
        <ListView ItemsSource="{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell>
                        <TextCell.Text>

                            <MultiBinding StringFormat="{}{0}  ({1})">
                                <Binding Path="Name"/>
                                <Binding Path="Quantity"/>
                            </MultiBinding>
                        </TextCell.Text>
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        
    </VerticalStackLayout>
</ContentPage>