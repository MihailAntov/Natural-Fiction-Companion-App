<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCombat2.Pages.InventoryPage"
             Title="Inventory">
    <VerticalStackLayout>
        <Label 
            Text="Items go here"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <StackLayout>
            <Label Text="{Binding HpValue}"/>
            <Slider  Minimum="0" Maximum="30" Value="{Binding HpValue}"/>
            <Stepper Minimum="0" Maximum="30"/>
        </StackLayout>
        <!--<Entry Placeholder="Enter item name" TextChanged="{Binding TextChanged}"/>-->


    </VerticalStackLayout>
</ContentPage>