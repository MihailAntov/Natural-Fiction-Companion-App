<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Name="DiceResult"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="NFCombat2.Views.DiceResultView">

  
        <StackLayout Margin="0,0,100,0" Padding="50" HeightRequest="400" WidthRequest="400" VerticalOptions="EndAndExpand">
            <FlexLayout BindableLayout.ItemsSource="{Binding Dice}" Direction="Row"  Wrap="Wrap"  >
                <BindableLayout.ItemTemplate>
                <DataTemplate>
                        <StackLayout FlexLayout.Basis="25%">
                        <Image Source="{Binding FileName}"/>
                            <Button Text="Reroll"
                            Command="{Binding Source={x:Reference DiceResult}, Path=BindingContext.Reroll}"
                            CommandParameter="{Binding}"/>

                        </StackLayout>
                
            </DataTemplate>
            </BindableLayout.ItemTemplate>

        </FlexLayout>
            <Button Text="Ok" Command="{Binding ConfirmCommand}"/>
        </StackLayout>
    

    

</toolkit:Popup>