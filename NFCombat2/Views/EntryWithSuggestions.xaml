<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NFCombat2.Views.EntryWithSuggestions">
    <VerticalStackLayout>

        <Entry Placeholder="Enter item name" TextChanged="EnteredText" Text="{Binding SearchCriteria}"/>
        <ListView ItemsSource="{Binding Items}" IsVisible="{Binding AreSuggestionsVisible}" ItemTapped="ChooseItem">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </VerticalStackLayout>
</toolkit:Popup>
